<Window x:Class="RecipeAppPOE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppPOE"
        mc:Ignorable="d"
        Title="Welcome!" Height="450" Width="800">
    <Grid x:Name="WelcomeScreen" Margin="0,0,-20,-6">
        <Grid.Background>
            <ImageBrush ImageSource="https://t4.ftcdn.net/jpg/01/30/61/95/360_F_130619528_TB9fPKqsZiwjpkeRRfU7h8zLWXpbF8DY.jpg"/>
        </Grid.Background>
        <Label x:Name="WelcomeLbl" Content="Welcome!" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" FontSize="60" FontFamily="Arial Black" Background="Transparent" Foreground="White"/>
        <Label x:Name="WelcomeLbl2" Content="To the Recipe Application!" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top" FontSize="24" Foreground="White"/>
        <Button x:Name="WelcomeBtn" Content="Begin!" HorizontalAlignment="Center" Margin="0,263,0,0" VerticalAlignment="Top" Height="29" Width="88" FontSize="16" FontFamily="Arial" Cursor="Hand" Click="WelcomeBtn_Click"/>

    </Grid>
</Window>
