<Window x:Class="RecipeAppPOE.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppPOE"
        mc:Ignorable="d"
        Title="FilterWindow" Height="350" Width="425">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="https://i.pinimg.com/564x/2e/e9/18/2ee918427712255bc116749e33616d33.jpg"/>
        </Grid.Background>
        <Label x:Name="filterLbl" Content="What would you like to filter by?" HorizontalAlignment="Left" Margin="36,98,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
        <ComboBox x:Name="filterComboBox" HorizontalAlignment="Center" Margin="0,176,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem x:Name="foodGroup" Content="Food Group"></ComboBoxItem>
            <ComboBoxItem x:Name="calories" Content="Calories"></ComboBoxItem>
        </ComboBox>
        <Button x:Name="filterBtn" Content="Confirm" HorizontalAlignment="Center" Margin="0,236,0,0" VerticalAlignment="Top" Click="filterBtn_Click"/>

    </Grid>
</Window>
