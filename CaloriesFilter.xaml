<Window x:Class="RecipeAppPOE.CaloriesFilter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppPOE"
        mc:Ignorable="d"
        Title="CaloriesFilter" Height="400" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://i.pinimg.com/564x/2e/e9/18/2ee918427712255bc116749e33616d33.jpg"/>
        </Grid.Background>
        <Label x:Name="caloriesFilterLbl" Content="Enter the amount of calories to filter by (Max calories)" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
        <TextBox x:Name="caloriesFilterTxt" HorizontalAlignment="Center" Margin="0,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="caloriesFilterBtn" Content="Confirm" HorizontalAlignment="Left" Margin="232,192,0,0" VerticalAlignment="Top" Click="caloriesFilterBtn_Click"/>

    </Grid>
</Window>
