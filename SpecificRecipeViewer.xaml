<Window x:Class="RecipeAppPOE.SpecificRecipeViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppPOE"
        mc:Ignorable="d"
        Title="SpecificRecipeViewer" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="https://i.pinimg.com/originals/c1/14/c3/c114c345413eebe514d073473e96c756.jpg"/>
        </Grid.Background>
        <Label x:Name="recipeNameLbl" Content="Please enter the name of the recipe you would like to view" HorizontalAlignment="Left" Margin="31,73,0,0" VerticalAlignment="Top" Foreground="#FFF9F6F6" FontSize="20" Width="577"/>
        <TextBox x:Name="specificRecipeTxt" HorizontalAlignment="Left" Margin="68,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="specificRecipeConfirmBtn" Content="Confirm" HorizontalAlignment="Left" Margin="108,183,0,0" VerticalAlignment="Top" Click="specificRecipeConfirmBtn_Click"/>

    </Grid>
</Window>
