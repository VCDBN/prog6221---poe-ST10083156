<Window x:Class="RecipeAppPOE.StepsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppPOE"
        mc:Ignorable="d"
        Title="StepsWindow" Height="650" Width="627">
    <Grid x:Name="stepWindow" Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="https://img.freepik.com/free-photo/notebook-recipe-tomato-farfalle-garlic-onion-mortar-pepper-top-view-copy-space_141793-3458.jpg?w=2000"/>
        </Grid.Background>
        <Label x:Name="StepsTitleLbl" Content="Steps" HorizontalAlignment="Left" Margin="249,128,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" FontFamily="MV Boli"/>
        <Label x:Name="stepLbl" Content="Please enter the next step in the recipe." HorizontalAlignment="Center" Margin="0,232,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="stepTxt" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="267" Height="38"/>
        <Button x:Name="addStepBtn" Content="Add Step" HorizontalAlignment="Center" Margin="0,375,0,0" VerticalAlignment="Top" Click="addStepBtn_Click"/>

    </Grid>
</Window>
